@page "{handler?}"
@model veritabaniCRUD.Pages.eklemeModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
    ViewData["Title"] = "Ekleme";
}

<h1>Ekleme</h1>
<div class="alert alert-info fade show" role="alert">
    @Model.mesaj   
</div>
<div class="row">
    <div class="col-8">
        <form asp-page-handler="Yeni" method="post" class="form form-group border rounded border-success text-center p-2">
            <div class="row">
                <div class="col-4">
                    İsim<br />
                    <input type="text" name="isim" value="" maxlength="50" placeholder="metin giriniz" />
                </div>
                <div class="col-4">
                    Ücret<br />
                    <input type="text" name="ucret" value="0" maxlength="50" placeholder="sayı giriniz" />
                </div>
                <div class="col-4 pt-2">
                    <button class="btn btn-success" style="white-space: nowrap;">Kişiyi Ekle</button>
                </div>
            </div>
        </form>
    </div>
</div>
