@page
@model veritabaniCRUD.Pages.aramaModel
@{
    Layout = "_Layout"; ViewData["Title"] = "Arama";
}
<h1>Arama</h1>
<div class="alert alert-info fade show" role="alert"> @Model.mesaj </div>
<div class="row m-2">
    <div class="col-8">
        <form method="get" class="form form-group border rounded border-info text-center p-2">
            <div class="row">
                <div class="col-4">
                    Aranan İsim (tam yazılmasa da arar)<br />
                    <input type="text" name="aranan" value="" maxlength="50" placeholder="metin giriniz" />
                </div>
                <div class="col-4 pt-2">
                    <button class="btn btn-info" style="white-space: nowrap;">Kişiyi Ara</button>
                </div>
            </div>
        </form>
    </div>
</div>
@if (Model._tablo != null && Model._tablo.Count > 0)
{
    <h2>Bulunan Kişiler</h2>
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model._tablo[0].ID)</th>
                <th>@Html.DisplayNameFor(model => model._tablo[0].isim)</th>
                <th>@Html.DisplayNameFor(model => model._tablo[0].ucret)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model._tablo)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.ID)</td>
                    <td>@Html.DisplayFor(modelItem => item.isim)</td>
                    <td>@Html.DisplayFor(modelItem => item.ucret)</td>
                </tr>
            }
        </tbody>
    </table>
}